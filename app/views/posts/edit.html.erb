<h1>Edit Post</h1>

<%= form_for @post, url: post_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title, placeholder: 'Update Title' %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body, placeholder: 'Update Content' %>
    </p>

    <p>
      <%= f.submit %><br>
    </p>

<% end %>